{
  "name": "hexo-include",
  "version": "1.2.0",
  "description": "A Hexo plugin for including raw content of any text file into a post",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/pirtleshell/hexo-include.git"
  },
  "author": {
    "name": "Robert Pirtle",
    "email": "astropirtle@gmail.com",
    "url": "pirtle.xyz"
  },
  "main": "lib/index.js",
  "keywords": [
    "hexo",
    "tag",
    "include",
    "insert"
  ],
  "bugs": {
    "url": "https://github.com/pipirt/hexo-include/issues"
  },
  "homepage": "https://github.com/pipirt/hexo-include#readme",
  "engines": {
    "node": ">=14.0.0"
  },
  "devDependencies": {
    "@babel/core": "^7.23.0",
    "@babel/register": "^7.22.0",
    "chai": "^4.3.7",
    "eslint": "^8.50.0",
    "eslint-config-hexo": "^6.0.0",
    "hexo": "^6.3.0",
    "hexo-fs": "^4.0.0",
    "mocha": "^9.2.0",
    "xo": "^0.54.0"
  },
  "scripts": {
    "test": "xo && mocha test/test.js"
  },
  "xo": {
    "root": true,
    "globals": [
      "hexo"
    ],
    "rules": {
      "no-var": "off",
      "prefer-const": "off",
      "prefer-arrow-callback": "off",
      "unicorn/prefer-module": "off",
      "unicorn/prefer-node-protocol": "off",
      "unicorn/prefer-module": "off",
      "func-names": "off",
      "quotes": "off",
      "indent": "off",
      "space-before-function-paren": "off",
      "comma-dangle": "off",
      "capitalized-comments": "off",
      "padding-line-between-statements": "off",
      "import/order": "off",
      "import/extensions": "off",
      "no-useless-return": "off"
    }
  },
  "dependencies": {
    "@babel/eslint-parser": "^7.23.0"
  }
}
